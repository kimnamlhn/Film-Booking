<div class="container">
  <div class="main-body">
    <div class="row gutters-sm">
      <div class="col-md-4 mb-3">
        <div class="card">
          <div class="card-body">
            <div class="d-flex flex-column align-items-center text-center">
              <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle"
                width="150">
              <div class="mt-3">
                <h4>Lê Hoài Nam</h4>

                <p class="text-secondary mb-1">21 years old</p>
                <p class="text-secondary mb-1">(NO BIRTHDAY)</p>
              </div>
            </div>
          </div>
        </div>
        <div class="card mt-3">
          <div class="list-group" id="list-tab" role="tablist">
            <a class="list-group-item list-group-item-action active" href="/user/profile">Thông tin cá nhân</a>
            <a class="list-group-item list-group-item-action" href="/user/ticket-booked">Vé của tôi</a>
            <a class="list-group-item list-group-item-action" href="/user/ticket-history">Lịch sử đặt vé</a>
          </div>
        </div>
      </div>
      <div class="col-md-8">

        <div class="card">

          <h3 class="card-header text-center font-weight-bold text-uppercase py-4">My profile</h3>
          <div class="card-body">
            <!--Form Edit-->
            <!--Form Edit .//-->
            <div id="table" class="table-editable">
              <table class="table table-bordered table-responsive-md table-striped text-center">

                <thead>
                  <tr>
                    <th class="text-center">No</th>
                    <th class="text-center">Type</th>
                    <th class="text-center">Value</th>
                    <th class="text-center">Edit</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td class="pt-3-half" contenteditable="true">1</td>
                    <td class="pt-3-half" contenteditable="true">Email</td>
                    <td class="pt-3-half" contenteditable="true">
                      <input type="email" class="form-control" id="editInputEmail" name="email" placeholder="{{user.email}}">
                    </td>
                    <td>
                      <span class="table-remove"><button type="submit"
                          class="btn btn-success btn-rounded btn-sm btn-block my-0">Save</button></span>
                    </td>
                  </tr>
                  <tr>
                    <td class="pt-3-half" contenteditable="true">2</td>
                    <td class="pt-3-half" contenteditable="true">Full name</td>
                    <td class="pt-3-half" contenteditable="true">
                      <input type="text" class="form-control" id="fullname" placeholder="Le Hoai Nam" name="name">
                    </td>
                    <td>
                      <span class="table-remove"><button type="submit"
                          class="btn btn-success btn-rounded btn-sm btn-block my-0">Save</button></span>
                    </td>
                  </tr>
                  <tr>
                    <td class="pt-3-half" contenteditable="true">3</td>
                    <td class="pt-3-half" contenteditable="true">Phone</td>
                    <td class="pt-3-half" contenteditable="true">
                      <input type="text" class="form-control" placeholder="{{user.phone}}" id="txtphone" name="phone">
                    </td>
                    <td>
                      <span class="table-remove"><button type="submit"
                          class="btn btn-success btn-rounded btn-sm btn-block my-0">Save</button></span>
                    </td>
                  </tr>
                </tbody>
                <tr>
                  <td class="pt-3-half" contenteditable="true">4</td>
                  <td class="pt-3-half" contenteditable="true">Password</td>
                  <td class="pt-3-half" contenteditable="true">
                    <input type="text" class="form-control " id="txtPass" name="MatKhau" readonly
                      placeholder="***********">
                  </td>
                  <td>
                    <span class="table-remove"><a href="#"
                        class="btn btn-danger btn-rounded btn-sm btn-block my-0 btn-change-pass">Change
                        PassWord</a></span>
                  </td>
                </tr>
              </table>
            </div>
          </div>
        </div>
        <!--End Edit profile-->
      </div>
    </div>
  </div>
</div>

</div>